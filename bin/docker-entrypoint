#!/bin/bash
set -e

# If running the rails server then create or migrate existing database
if [ "${1}" == "./bin/rails" ] && [ "${2}" == "server" ]; then
  # Ensure directory permissions first
  mkdir -p public/assets
  chmod -R 755 public
  
  # Run database preparation in background to speed up startup
  ./bin/rails db:prepare &
  
  # Precompile assets if they don't exist
  if [ ! -d "public/assets" ] || [ -z "$(ls -A public/assets 2>/dev/null)" ]; then
    ./bin/rails assets:precompile
  fi
  
  # Wait for database preparation to complete
  wait
fi

exec "${@}"
