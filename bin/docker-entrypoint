#!/bin/bash
set -e

# If running the rails server then create or migrate existing database
if [ "${1}" == "./bin/rails" ] && [ "${2}" == "server" ]; then
  echo "Starting Rails application..."
  
  # Run database migrations
  echo "Running database migrations..."
  ./bin/rails db:migrate 2>/dev/null || true
  
  # Check if assets are already precompiled
  if [ ! -f "public/assets/manifest.json" ] || [ ! -d "public/assets" ] || [ -z "$(ls -A public/assets 2>/dev/null)" ]; then
    echo "Precompiling assets..."
    ./bin/rails assets:precompile
  else
    echo "Assets already precompiled, skipping..."
  fi
  
  echo "Rails application ready"
fi

exec "${@}"
