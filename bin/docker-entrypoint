#!/bin/bash
set -e

# If running the rails server then create or migrate existing database
if [ "${1}" == "./bin/rails" ] && [ "${2}" == "server" ]; then
  echo "Starting Rails application..."
  
  # Check database connection
  echo "Checking database connection..."
  ./bin/rails db:version 2>/dev/null || echo "Database connection failed"
  
  # Quick database migration only
  ./bin/rails db:migrate 2>/dev/null || true
  
  # Precompile assets only if they don't exist (faster startup)
  if [ ! -f "public/assets/manifest.json" ]; then
    echo "Precompiling assets..."
    ./bin/rails assets:precompile
  else
    echo "Assets already precompiled"
  fi
  
  echo "Rails application ready"
fi

exec "${@}"
