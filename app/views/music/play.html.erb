<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">音楽再生</h1>
      <div class="flex space-x-4">
        <% if user_signed_in? %>
          <span class="text-sm text-gray-600">
            ログイン中: <%= current_user.email %>
          </span>
          <%= link_to "ログアウト", destroy_user_session_path, 
              class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded",
              method: :delete %>
        <% end %>
      </div>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
      <div class="text-center mb-8">
         
        <div class="mb-6" style="margin-top: 2.5em;">
          <audio id="audio-player" controls class="w-full max-w-md mx-auto" style="transform: scale(1.2);">
            <source src="/music/<%= @file_name %>" type="audio/mpeg">
            お使いのブラウザは音声再生に対応していません。
          </audio>
        </div>
      </div>
      
      <% if user_signed_in? %>
        <div class="bg-gray-50 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4" style="font-family: inherit;">瞑想記録を保存</h3>
          <%= form_with scope: :meditation_record, url: meditation_records_path, local: true, data: { turbo: false }, class: "space-y-4", html: { id: 'meditation-form' } do |form| %>
            <div>
              <%= form.label :date, "日付", class: "block text-base font-semibold text-gray-900 mb-1", style: "font-family: inherit;" %>
              <%= form.date_field :date, value: Date.current, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base", style: "height: 2.5em; font-family: inherit; padding-left: 1em;" %>
            </div>
            <div>
              <%= form.label :duration, "瞑想時間（分）", class: "block text-base font-semibold text-gray-900 mb-1", style: "font-family: inherit;" %>
              <%= form.number_field :duration, min: 1, step: 1, class: "mt-1 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base flex items-center", style: "height: 2.5em; font-family: inherit; width: 100px; display: inline-block; vertical-align: middle; padding-left: 1em; text-align: left;" %>
            </div>
            <div>
              <%= form.label :notes, "メモ", class: "block text-base font-semibold text-gray-900 mb-1", style: "font-family: inherit;" %>
              <%= form.text_area :notes, rows: 3, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 text-base", style: "height: 6.75em; font-family: inherit; padding-left: 1em; padding-top: 1em; padding-bottom: 1em;" %>
            </div>
            <div class="flex space-x-4 mt-6 justify-start">
              <%= form.submit "記録を保存", class: "w-32 min-w-fit bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-base", data: { disable_with: "保存中..." } %>
              <%= link_to "音楽ライブラリに戻る", music_path, class: "w-32 min-w-fit bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded text-base text-center" %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <p class="text-yellow-800 text-sm">
            瞑想記録を保存するには、
            <%= link_to "ログイン", new_user_session_path, 
                class: "text-yellow-600 hover:text-yellow-800 underline" %>
            または
            <%= link_to "新規登録", new_user_registration_path, 
                class: "text-yellow-600 hover:text-yellow-800 underline" %>
            してください。
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
document.addEventListener('turbo:load', function() {
  let startTime = null;
  let elapsedTime = 0;
  let timerInterval = null;
  let isRunning = false;
  
  const timerDisplay = document.getElementById('timer');
  const startBtn = document.getElementById('startBtn');
  const pauseBtn = document.getElementById('pauseBtn');
  const stopBtn = document.getElementById('stopBtn');
  const durationInput = document.getElementById('meditation-duration');
  const audio = document.getElementById('audio-player');
  
  function formatTime(seconds) {
    const mins = Math.floor(seconds / 60);
    const secs = seconds % 60;
    return `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
  }
  
  function updateTimer() {
    if (isRunning) {
      const currentTime = Date.now();
      elapsedTime = Math.floor((currentTime - startTime) / 1000);
      timerDisplay.textContent = formatTime(elapsedTime);
      
      // 瞑想時間入力欄を更新（分単位）
      const minutes = Math.floor(elapsedTime / 60);
      if (durationInput) {
        durationInput.value = minutes;
      }
    }
  }
  
  startBtn.addEventListener('click', function() {
    if (!isRunning) {
      startTime = Date.now() - (elapsedTime * 1000);
      isRunning = true;
      timerInterval = setInterval(updateTimer, 1000);
      
      startBtn.disabled = true;
      pauseBtn.disabled = false;
      stopBtn.disabled = false;
    }
  });
  
  pauseBtn.addEventListener('click', function() {
    if (isRunning) {
      isRunning = false;
      clearInterval(timerInterval);
      
      startBtn.disabled = false;
      pauseBtn.disabled = true;
      stopBtn.disabled = false;
    }
  });
  
  stopBtn.addEventListener('click', function() {
    isRunning = false;
    clearInterval(timerInterval);
    elapsedTime = 0;
    timerDisplay.textContent = '00:00';
    
    if (durationInput) {
      durationInput.value = 0;
    }
    
    startBtn.disabled = false;
    pauseBtn.disabled = true;
    stopBtn.disabled = true;
  });

  // 音楽再生時間を瞑想時間に自動反映
  if (audio && durationInput) {
    audio.addEventListener('timeupdate', function() {
      // 再生位置（秒）を分単位で切り上げ
      const minutes = Math.ceil(audio.currentTime / 60);
      if (!isRunning) { // タイマーが動いていない場合のみ更新
        durationInput.value = minutes;
      }
    });
  }

  // 音楽ファイルの再生時間（分）を自動でdurationにセット
  const audio = document.getElementById('audio-player');
  const durationInput = document.querySelector('input[name="meditation_record[duration]"]');
  if (audio && durationInput) {
    function setDurationFromAudio() {
      if (audio.duration && !isNaN(audio.duration)) {
        const minutes = Math.max(1, Math.round(audio.duration / 60));
        durationInput.value = minutes;
      }
    }
    audio.addEventListener('loadedmetadata', setDurationFromAudio);
    audio.addEventListener('play', setDurationFromAudio);
  }

  // 記録を保存したら記録一覧に遷移
  const form = document.getElementById('meditation-form');
  if (form) {
    form.addEventListener('ajax:success', function(event) {
      window.location.href = '/meditation_records';
    });
    form.addEventListener('submit', function(event) {
      // 送信後に必ず遷移（非同期・同期両対応）
      setTimeout(function() {
        window.location.href = '/meditation_records';
      }, 100);
    });
  }
});
</script> 