<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900">瞑想音楽ライブラリ</h1>
      <div class="flex space-x-4">
        <% if user_signed_in? %>
          <span class="text-sm text-gray-600">
            ログイン中: <%= current_user.email %>
          </span>
          <%= link_to "ログアウト", destroy_user_session_path, 
              class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded",
              method: :delete %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, 
              class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" %>
          <%= link_to "新規登録", new_user_registration_path, 
              class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
        <% end %>
      </div>
    </div>

    <% if user_signed_in? %>
      <div class="bg-white shadow rounded-lg p-6">
        <h1 class="text-2xl font-semibold mb-4">音楽メニュー</h1>
        
        <% if @music_files.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% @music_files.each do |file| %>
              <div class="border rounded-lg p-4 hover:shadow-md transition-shadow">
                <div class="mb-3">
                  <h3 class="font-medium text-gray-900 truncate" title="<%= file.name %>">
                    <%= file.name %>
                  </h3>
                </div>
                
                <%= link_to "再生", music_play_path(file_id: file.id, file_name: file.name),
                    class: "w-full bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded text-center block" %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <div class="mb-6">
              <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
              </svg>
            </div>
            <h2 class="text-2xl font-bold text-gray-900 mb-4">音楽ファイルが見つかりません</h2>
            <p class="text-gray-600 mb-6">
              管理者のGoogle Driveに音楽ファイルが設定されていないか、接続に問題があります。
            </p>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-white shadow rounded-lg p-8 text-center">
        <div class="mb-6">
          <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-gray-900 mb-4">ログインまたは新規登録してください</h2>
        <p class="text-gray-600 mb-6">
          瞑想音楽ライブラリにアクセスするには、アカウントが必要です。
        </p>
        <div class="space-y-4">
          <%= link_to "ログイン", new_user_session_path, 
              class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg text-lg mr-4" %>
          <%= link_to "新規登録", new_user_registration_path, 
              class: "bg-green-500 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-lg text-lg" %>
        </div>
      </div>
    <% end %>

    <% if user_signed_in? %>
      <div class="mt-8">
        <%= link_to "瞑想記録を見る", meditation_records_path,
            class: "bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>

<% if session[:google_access_token] %>
<script>
document.addEventListener('turbo:load', function() {
  // 本番環境用のトークンリフレッシュ処理
  function performTokenRefresh() {
    fetch('/refresh_google_token', {
      method: 'POST',
      headers: {
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
        'Content-Type': 'application/json'
      }
    })
    .then(response => response.json())
    .then(data => {
      if (!data.success) {
        // 失敗時は再ログインページに移動
        window.location.href = '/auth/google_oauth2';
      }
    })
    .catch(error => {
      // エラー時も再ログインページに移動
      window.location.href = '/auth/google_oauth2';
    });
  }
  
  // ページ読み込み後55分でトークンリフレッシュ
  setTimeout(function() {
    performTokenRefresh();
  }, 55 * 60 * 1000); // 55分後
});
</script>
<% end %> 