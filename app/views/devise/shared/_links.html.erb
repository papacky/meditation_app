<%- if controller_name != 'sessions' %>
  <%= link_to "ログイン", new_session_path(resource_name), class: "text-indigo-600 hover:text-indigo-500" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "新規アカウント作成", new_registration_path(resource_name), class: "text-indigo-600 hover:text-indigo-500" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードを忘れた場合", new_password_path(resource_name), class: "text-indigo-600 hover:text-indigo-500" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "確認メールが届かない場合", new_confirmation_path(resource_name), class: "text-indigo-600 hover:text-indigo-500" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "アカウントロック解除", new_unlock_path(resource_name), class: "text-indigo-600 hover:text-indigo-500" %><br />
<% end %>

<%# OmniAuthリンクを無効化 - 独自のGoogle認証システムを使用するため %>
<% if false && devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
  <% end %>
<% end %>
