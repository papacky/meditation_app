<div class="container mx-auto px-4 py-8">
  <div class="max-w-xl mx-auto bg-white shadow rounded-lg p-8">
    <h1 class="text-2xl font-bold text-gray-900 mb-6">瞑想記録の詳細</h1>
    <div class="mb-4">
      <span class="font-semibold text-gray-700">日付：</span>
      <%= @meditation_record.date.strftime('%Y年%m月%d日') if @meditation_record.date %>
    </div>
    <div class="mb-4">
      <span class="font-semibold text-gray-700">瞑想時間：</span>
      <%= @meditation_record.duration %> 分
    </div>
    <div class="mb-4">
      <span class="font-semibold text-gray-700">メモ：</span>
      <%= @meditation_record.notes %>
    </div>
    <div class="mt-8 flex space-x-4">
      <%= link_to "一覧に戻る", meditation_records_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "編集", edit_meditation_record_path(@meditation_record), class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "削除", meditation_record_path(@meditation_record), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
</div> 