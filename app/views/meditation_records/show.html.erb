<div class="min-h-screen bg-gradient-to-br from-indigo-50 to-purple-100">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
      <!-- 詳細部分 -->
      <div class="max-w-2xl mx-auto">
        <!-- ヘッダー部分 -->
        <div class="bg-white rounded-lg shadow-lg p-6 mb-8">
          <div class="flex items-center space-x-4">
            <div class="h-12 w-12 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center">
              <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
              </svg>
            </div>
            <div>
              <h1 class="text-3xl font-bold text-gray-900">瞑想記録の詳細</h1>
              <p class="text-gray-600">この日の瞑想の詳細を確認できます</p>
            </div>
          </div>
        </div>

        <!-- 記録詳細 -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <div class="space-y-6">
            <div class="bg-gradient-to-br from-blue-50 to-indigo-100 border border-blue-200 rounded-xl p-6">
              <div class="flex items-center mb-3">
                <div class="h-8 w-8 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-lg flex items-center justify-center mr-3">
                  <svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2 2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900">日付</h3>
              </div>
              <p class="text-xl font-medium text-gray-700">
                <%= @meditation_record.date.strftime('%Y年%m月%d日') if @meditation_record.date %>
              </p>
            </div>

            <div class="bg-gradient-to-br from-green-50 to-teal-100 border border-green-200 rounded-xl p-6">
              <div class="flex items-center mb-3">
                <div class="h-8 w-8 bg-gradient-to-r from-green-500 to-teal-600 rounded-lg flex items-center justify-center mr-3">
                  <svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900">瞑想時間</h3>
              </div>
              <p class="text-xl font-medium text-gray-700">
                <%= @meditation_record.duration %> 分
              </p>
            </div>

            <div class="bg-gradient-to-br from-purple-50 to-pink-100 border border-purple-200 rounded-xl p-6">
              <div class="flex items-center mb-3">
                <div class="h-8 w-8 bg-gradient-to-r from-purple-500 to-pink-600 rounded-lg flex items-center justify-center mr-3">
                  <svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                  </svg>
                </div>
                <h3 class="text-lg font-semibold text-gray-900">メモ</h3>
              </div>
              <p class="text-gray-700 leading-relaxed">
                <%= @meditation_record.notes.present? ? @meditation_record.notes : "メモはありません" %>
              </p>
            </div>

            <% if @meditation_record.file_name.present? %>
              <div class="bg-gradient-to-br from-yellow-50 to-orange-100 border border-yellow-200 rounded-xl p-6">
                <div class="flex items-center mb-3">
                  <div class="h-8 w-8 bg-gradient-to-r from-yellow-500 to-orange-600 rounded-lg flex items-center justify-center mr-3">
                    <svg class="h-5 w-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold text-gray-900">使用した音楽</h3>
                </div>
                <p class="text-gray-700">
                  <%= @meditation_record.file_name.gsub(/\.(mp3|wav|flac|m4a|aac|ogg)$/i, '') %>
                </p>
              </div>
            <% end %>
          </div>

          <div class="mt-8 flex flex-col space-y-4 sm:flex-row sm:space-y-0 sm:space-x-4 justify-center items-center">
            <%= link_to "一覧に戻る", meditation_records_path, 
                class: "inline-block text-center min-w-[110px] bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 text-white font-bold py-3 px-6 rounded-lg transition-all duration-300 transform hover:scale-105" %>
            <%= link_to "編集", edit_meditation_record_path(@meditation_record), 
                class: "inline-block text-center min-w-[110px] bg-gradient-to-r from-green-500 to-teal-600 hover:from-green-600 hover:to-teal-700 text-white font-bold py-3 px-6 rounded-lg transition-all duration-300 transform hover:scale-105" %>
            <%= link_to "削除", meditation_record_path(@meditation_record), 
                data: { 
                  turbo_method: :delete, 
                  turbo_confirm: "本当に削除しますか？" 
                }, 
                class: "inline-block text-center min-w-[110px] bg-gradient-to-r from-red-500 to-pink-600 hover:from-red-600 hover:to-pink-700 text-white font-bold py-3 px-6 rounded-lg transition-all duration-300 transform hover:scale-105" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 