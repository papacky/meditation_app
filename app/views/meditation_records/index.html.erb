<div class="container mx-auto px-4 py-8">
  <!-- メインタイトルと音楽ライブラリボタン -->
  <div class="mb-8">
    <div class="flex justify-between items-center">
      <h1 class="text-3xl font-bold text-gray-900">瞑想記録</h1>
      <div class="flex space-x-4">
        <%= link_to "音楽ライブラリ", music_path,
            class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  </div>

  <!-- カレンダー部分 -->
  <div class="mb-8">
    <div class="flex justify-center">
      <div class="w-full max-w-6xl">
        <!-- カスタム月ヘッダー -->
        <% current_month = params[:start_date].present? ? Date.parse(params[:start_date]) : Date.current %>
        <div class="text-center mb-4">
          <h2 class="text-2xl font-bold text-gray-900">
            <%= current_month.strftime("%Y年%-m月") %>
          </h2>
        </div>
        
        <div class="simple-calendar">
          <%= month_calendar events: @meditation_records, event_strftime: "%Y-%m-%d" do |date, records| %>
            <% current_month = params[:start_date].present? ? Date.parse(params[:start_date]) : Date.current %>
            <% if date.month == current_month.month && date.year == current_month.year %>
              <div style="height: 55px; display: flex; flex-direction: column; align-items: center; padding-top: 0px;">
                <span class="font-bold"><%= date.day %></span>
                <% if records.present? %>
                  <div style="margin-top: 4px;">
                    <span class="text-blue-600 font-semibold text-xl"><%= records.count %>回</span>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div style="height: 55px; visibility: hidden;">
                <span class="font-bold text-gray-400"><%= date.day %></span>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- 今月の集計（3分割）と瞑想記録・統計カード・記録一覧 -->
  <div class="space-y-8">
    <!-- 今月の集計（3分割デザイン） -->
    <div class="w-full max-w-6xl mx-auto mb-6">
      <h2 class="text-2xl font-bold text-gray-900 mb-4"><%= @current_month_name %>の集計</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex items-center md:justify-start justify-center">
            <div class="p-3 rounded-full bg-blue-100 text-blue-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">瞑想回数</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @total_count %></p>
            </div>
          </div>
        </div>

        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex items-center md:justify-start justify-center">
            <div class="p-3 rounded-full bg-green-100 text-green-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">瞑想時間</p>
              <p class="text-2xl font-semibold text-gray-900"><%= format_duration(@total_minutes) %></p>
            </div>
          </div>
        </div>

        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex items-center md:justify-start justify-center">
            <div class="p-3 rounded-full bg-purple-100 text-purple-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2 2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">瞑想日数</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @active_days %>日</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- 全期間の集計と統計カード -->
    <div class="max-w-6xl mx-auto w-full">
      <div class="mb-4">
        <h2 class="text-2xl font-bold text-gray-900">全期間の集計</h2>
      </div>

      <!-- 統計情報 -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex items-center md:justify-start justify-center">
            <div class="p-3 rounded-full bg-blue-100 text-blue-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"/>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">瞑想回数</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @total_sessions %></p>
            </div>
          </div>
        </div>

        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex items-center md:justify-start justify-center">
            <div class="p-3 rounded-full bg-green-100 text-green-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">瞑想時間</p>
              <p class="text-2xl font-semibold text-gray-900"><%= format_duration(@total_duration) %></p>
            </div>
          </div>
        </div>

        <div class="bg-white shadow rounded-lg p-6">
          <div class="flex items-center md:justify-start justify-center">
            <div class="p-3 rounded-full bg-purple-100 text-purple-600">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2 2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-500">瞑想日数</p>
              <p class="text-2xl font-semibold text-gray-900"><%= @total_days %>日</p>
            </div>
          </div>
        </div>
      </div>

      <!-- 記録一覧ボタン -->
      
      <div class="text-left">
        <%= link_to "記録一覧（メモ）を見る", list_meditation_records_path,
            class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  </div>
</div> 